<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DarkOrangeButton">
        <item name="backgroundTint">@color/orange_dark</item>
        <item name="android:textAppearance">@style/DarkOrangeButtonText</item>
    </style>

    <style name="DarkOrangeButtonText" parent="TextAppearance.MaterialComponents.Button" >
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="LoginOptionsContainer">
        <item name="android:layout_width">@dimen/space_48dp</item>
        <item name="android:layout_height">@dimen/space_48dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="GasStationsDetailTile">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>