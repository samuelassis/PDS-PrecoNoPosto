<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/space_8dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/orange_dark">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_8dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/resGasStationsListAvatarSip"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/Circular"
                app:srcCompat="@android:drawable/sym_def_app_icon" />

            <TextView
                android:id="@+id/resGasStationsNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/resGasStationsListAvatarSip"
                android:textSize="18sp"
                android:singleLine="false"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/space_8dp"
                tools:text="Posto Ipiranga"/>

            <TextView
                android:id="@+id/resGasStationsListGasolineTextTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/resGasStationsNameTv"
                app:layout_constraintTop_toTopOf="@id/resGasStationsListGasolineTv"
                android:text="@string/gasoline"/>

            <TextView
                android:id="@+id/resGasStationsListGasolineTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:textSize="11sp"
                android:textColor="@color/orange_dark"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/resGasStationsListGasolineTextTv"
                app:layout_constraintTop_toTopOf="@id/resGasStationsListAlcoholTextTv"
                tools:text="R$ 0,000L"/>

            <TextView
                android:id="@+id/resGasStationsListAlcoholTextTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/resGasStationsListGasolineTv"
                app:layout_constraintTop_toTopOf="@id/resGasStationsListAlcoholTv"
                android:text="@string/alcohol"/>

            <TextView
                android:id="@+id/resGasStationsListAlcoholTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:textSize="11sp"
                android:textColor="@color/orange_dark"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/resGasStationsListAlcoholTextTv"
                app:layout_constraintTop_toTopOf="@id/resGasStationsListDieselTextTv"
                tools:text="R$ 0,000L"/>

            <TextView
                android:id="@+id/resGasStationsListDieselTextTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@id/resGasStationsListAlcoholTv"
                app:layout_constraintTop_toTopOf="@id/resGasStationsListDieselTv"
                android:text="@string/diesel"/>

            <TextView
                android:id="@+id/resGasStationsListDieselTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="4dp"
                android:textSize="11sp"
                android:textColor="@color/orange_dark"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/resGasStationsListDieselTextTv"
                app:layout_constraintTop_toBottomOf="@id/resGasStationsListGeneralScoreTv"
                tools:text="R$ 0,000L"/>

            <TextView
                android:id="@+id/resGasStationsListGeneralScoreTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/resGasStationsNameTv"
                app:layout_constraintStart_toStartOf="@id/resGasStationsNameTv"
                android:layout_marginTop="4dp"
                android:textSize="16sp"
                android:textColor="@color/orange_dark"
                android:textStyle="bold"
                tools:text="4.5/5.0"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>